fileptr = open("file1.txt","r")
content = fileptr.readlines()
# print(content)

keys_list = []
for element in range(0, len(content), 2):
    # to remove whitespaces strip() function is used
    keys = int(content[element].strip())
    keys_list.append(keys)
# print(keys_list)

values_list = []
for element in range(1, len(content), 2):
    values = content[element].strip()
    values_list.append(values)
# print(values_list)
    
my_dict = {}
# zip() funtction is used to take any iterables as input
for key,value in zip(keys_list,values_list):
    if key in my_dict:
        my_dict[key] += "; " + value
    else:
        my_dict[key] = value
# print(my_dict)
with open("output_keys.txt", "w") as f:
    for k in sorted(my_dict, reverse=True):
        f.write(f"{k}: {my_dict[k]}\n")

sorted_values_list = sorted(values_list, reverse=True)
# print(sorted_values_list)
sorted_values_list = sorted(values_list, reverse=True)
with open("output_titles.txt", "w") as f1:
    for v in sorted_values_list:
        f1.write(f"{v}\n")